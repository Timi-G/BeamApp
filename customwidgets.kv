<Data_Entry_Label>:


<DataBooks_Create_Screen>:
    on_pre_enter: root.screen_organizer()

<MainLabels>:
	rows: 2
	text: ''
	img: ''
	text_color: 0,0,0,1
	stretch: True
	ratio: False
	img_size: 1,0.75
	lbl_size: 1,0.25
	lbl_font_size: 15
	lbl_padding: 0,0
	lbl_shorten: False if len(root.text)<18 else True
	lbl_shorten_from: 'right'
	Image:
		source: root.img
		size_hint: root.img_size
		allow_stretch: root.stretch
		keep_ratio: root.ratio
	Label:
		canvas.before:
			Color: 
				rgba: 1,1,1,1
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint: root.lbl_size
		text: root.text
		text_size: self.size
		font_size:root.lbl_font_size
		padding: root.lbl_padding
		shorten: root.lbl_shorten
		shorten_from: root.lbl_shorten_from
		halign: 'center'
		valign: 'middle'
		color: root.text_color
	
<DataBook_Create_MV>:
	size_hint: 0.6,0.5
	pos_hint: {'center_x': 0.5, 'y': 0.4}
	id: dbcreatemv
	#border_color: 0,0,0,1
	border_width: 0.1
	dbook_name: dbcreateti.text
	dbook_cat: dbcreatespinner.text
	FloatLayout:
		size_hint: 0.95, 0.95
		pos_hint: {'left': 0 ,'top': 0}
		Label:
			pos_hint: {'center_x':0.5 , 'y':0.85}
			size_hint: 0.4,0.2
			text: 'Create New DataBook'
			text_size: self.size
		Label:
			pos_hint: {'x':0 , 'y':0.70}
			size_hint: 0.4,0.2
			text: 'DataBook Name:'
			text_size: self.size
		TextInput:
			id: dbcreateti
			pos_hint: {'x':0 , 'y':0.60}
			size_hint: 0.7,0.10
		Label:
			pos_hint: {'x':0 , 'y':0.55}
			size_hint: 0.8,0.05
			text: 'e.g TimeBook Inc., Glee Ent., ED Centre...'
			text_size: self.size
			font_size: 10
		CustomSpinner:
			id: dbcreatespinner
			text: 'Choose category'
			values: root.data_category
			pos_hint: {'x': 0, 'y': 0.3}
			font_size: 13
			height: 10
			sync_height: True
			size_hint: 0.6, 0.15
			valign: 'middle'
		Button:
			id: db_create_cancel
			text: 'CANCEL'
			size_hint: 0.50, 0.15
			pos_hint: {'x': 0, 'y': 0}
			on_press: root.cancel_button()
		Button:
			id: db_create_save
			text: 'SAVE/OK'
			size_hint: 0.50, 0.15
			pos_hint: {'x': 0.50, 'y': 0}
			on_press: root.save_ok_button()

<DataBooks_ZeroEntryPage>:
	id: databooksaddzero
	canvas:
		Color: 
			rgba: 1,1,1,1
		Rectangle:
			size: self.size
			pos: self.pos
	MainLabels:
		text: 'Add New DataBook'
		img: 'App Images/Green add.jpg'
		pos_hint: {'x':0.35, 'y':0.35}
		size_hint: 0.35, 0.35
		text_color: 0,0.6,0,1
		stretch: False
		ratio: True
		on_press: root.create_first_databook()
		
